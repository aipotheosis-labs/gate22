                    "custom_variables": {
                      "type": "string",
                      "description": "Custom variable value"
                    }
                  },
                  "description": "Custom attributes for the credential",
                  "additionalProperties": true
                }
              },
              "additionalProperties": false
            }
          },
          "description": "Credential creation details",
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
