                    "type": "object",
                    "visible": ["description", "referee", "relationship"],
                    "required": ["description", "referee"],
                    "properties": {
                      "referee": {
                        "type": "object",
                        "visible": ["name", "email", "avatar", "url"],
                        "required": ["name"],
                        "properties": {
                          "url": {
                            "type": "string",
